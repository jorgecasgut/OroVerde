<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menuprincipal"
    android:background="@drawable/fondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.enrique.oroverde.menu_principal.menuprincipal">

    <TextView
        android:text="Oro verde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView3"
        android:fontFamily="cursive"
        android:textSize="36sp"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="normal|bold"
        android:textAllCaps="false" />

    <Button
        android:text=""
        android:background="@drawable/productos_img1"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="34dp"
        android:id="@+id/btnproductos"
        android:layout_below="@+id/textView3"
        android:layout_toStartOf="@+id/textView3"
        android:layout_marginEnd="23dp" />

    <Button
        android:text=""
        android:background="@drawable/carrito_img1"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/btnproductos"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginStart="25dp"
        android:id="@+id/btncomprar" />

    <Button
        android:text=""
        android:background="@drawable/ayuda_img1"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btnmiscompras"
        android:layout_alignStart="@+id/btnmiscompras"
        android:layout_marginTop="95dp"
        android:id="@+id/btnayuda" />

    <Button
        android:text=""
        android:background="@drawable/salir_img1"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/btnayuda"
        android:layout_alignEnd="@+id/btninfo"
        android:id="@+id/btnsalir" />

    <Button
        android:text="Button"
        android:background="@drawable/miscompras_img1"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="95dp"
        android:id="@+id/btnmiscompras"
        android:layout_below="@+id/btnproductos"
        android:layout_alignStart="@+id/btnproductos" />

    <Button
        android:text=""
        android:background="@drawable/usuario_img1"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:id="@+id/btninfo"
        android:layout_alignBaseline="@+id/btnmiscompras"
        android:layout_alignBottom="@+id/btnmiscompras"
        android:layout_alignStart="@+id/btncomprar" />

    <TextView
        android:text="Info. Usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_below="@+id/btninfo"
        android:layout_alignStart="@+id/btninfo"
        android:fontFamily="sans-serif-condensed"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"/>

    <TextView
        android:text="Productos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:fontFamily="sans-serif-condensed"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/btnproductos"
        android:layout_toStartOf="@+id/textView3" />

    <TextView
        android:text="Mis compras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:fontFamily="sans-serif-condensed"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/btnmiscompras"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:text="Ayuda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:fontFamily="sans-serif-condensed"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/btnayuda"
        android:layout_alignStart="@+id/btnayuda" />

    <TextView
        android:text="Salir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:fontFamily="sans-serif-condensed"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/btnsalir"
        android:layout_alignStart="@+id/btnsalir" />

    <TextView
        android:text="Comprar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:fontFamily="sans-serif-condensed"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/btncomprar"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginStart="14dp" />
</RelativeLayout>
